$(function(){if($('.top_view').length>0){var $slider=$('.top_view');var slides=$slider.find('.detail_box').length;$slider.slick({arrows:false,infinite:true,autoplay:true,autoplaySpeed:3000,speed:500,dots:false,pauseOnFocus:false,pauseOnHover:false,slidesToShow:1,slidesToScroll:1,}).append('<div class="nav_slider"><div class="nav_cont"><span class="idx">1</span><span class="slides">'+slides+'</span></div><button class="btn_next">+</button></div>').on('afterChange',function(slick,currentSlide){var nextIndex=$(this).slick('slickCurrentSlide')+1;if(nextIndex>slides){nextIndex=1;}
$('.nav_slider .idx').text(nextIndex);});$(document).on("click",'button.btn_next',function(){$slider.slick('slickNext');});}});$(function(){if($('.gallery_slider').length>0){$('.gallery_slider').slick({arrows:true,infinite:true,autoplay:false,autoplaySpeed:4000,dots:false,slidesToShow:1,slidesToScroll:1,centerMode:true,centerPadding:'25%',responsive:[{breakpoint:780,settings:{centerPadding:'15%',}},{breakpoint:580,settings:{centerPadding:'8%',}}]});}});$(function(){if($('.slider_cenpa').length>0){$('.slider_cenpa').slick({arrows:true,infinite:true,autoplay:false,autoplaySpeed:4000,dots:false,slidesToShow:1,slidesToScroll:1,centerMode:true,centerPadding:'25%',responsive:[{breakpoint:780,settings:{centerPadding:'15%',}},{breakpoint:580,settings:{centerPadding:'8%',}}]});}});$(function(){var headerHight=0;$('a[href^="#"]').click(function(){var href=$(this).attr("href");var target=$(href=="#"||href==""?'html':href);if(target.length>0){var position=target.offset().top-headerHight;$("html, body").animate({scrollTop:position},550,"swing");return false;}});})
$(window).load(function(){var headerHight=$('header').height()+$('.category_nav').height();var url=$(location).attr('href');var url_sp=url.split("?scroll=");if(url_sp.length>1){var hash='#'+url_sp[url_sp.length-1];var tgt=$(hash);var pos=tgt.offset().top-headerHight;$("html, body").animate({scrollTop:pos},550,"swing");}});$(function(){if($('.thum img').length>0){objectFitImages('.thum img');}});$(function(){if($('.image_box img').length>0){objectFitImages('.image_box img');}});$(function(){if($('.writer_list_area li .image_box img').length>0){objectFitImages('.writer_list_area li .image_box img');}
